//código da atividade 5 programa que inverte os caracteres de um string
package application;

import java.util.Scanner;

public class Program {

	 public static void main (String[] args) throws java.lang.Exception {
		  Scanner sc = new Scanner(System.in);
		  System.out.print("Digite a palavra que você quer inverter: ");
	      String str = sc.nextLine();
	      System.out.println(new Program().str_reverse(str)); 
	  }
	  public String str_reverse(String str) {
	      if(str.isEmpty()) {
	          return str;
	      }
	      
	      return str.substring(str.length() - 1) + str_reverse(str.substring(0, str.length() - 1));
	  }
 }
